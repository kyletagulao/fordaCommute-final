<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TerminalsFragment">

    <ScrollView
        android:id="@+id/scrollViewRoutes"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@+id/routesText"
        >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/routesText"
        android:paddingTop="5dp"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/jeepneyContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jeepney Terminals"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/tertiary"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/jeepneySwitch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Show"
            android:textSize="11sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/assistantextrabold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/secondary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/busContainer"
        app:layout_constraintTop_toBottomOf="@+id/alangilanContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Terminals"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/tertiary"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/busSwitch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Show"
            android:textSize="11sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/assistantextrabold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/secondary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/vanContainer"
        app:layout_constraintTop_toBottomOf="@+id/capitolioContainer"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UV Express Terminals"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/tertiary"
            android:textSize="15sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="20dp"
            />

        <Button
            android:id="@+id/vanSwitch"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Show"
            android:textSize="11sp"
            android:textColor="@color/primary"
            android:fontFamily="@font/assistantextrabold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="15dp"
            android:backgroundTint="@color/secondary"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    </ScrollView>

</FrameLayout>